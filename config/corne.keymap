#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/bt.h>

#include "keypos/corne.dtsi"
#include "behaviors/autoshift.dtsi"
#include "behaviors/homerowmods.dtsi"
#include "behaviors/layer-switching.dtsi"

#include "layouts/qwerty.dtsi"
#include "layouts/enthium.dtsi"
#include "layouts/numbers.dtsi"
#include "layouts/symbols.dtsi"


// Mnemonic layers
#define L_BASE     0
#define L_QWERTY   0
#define L_ENTHIUM  1
#define L_LOWER    2
#define L_HIGHER   3


/**
 * Layers
 *
 * The following icons from a Nerd Font
 * are the symbolid representation of layers and actions on layers.
 *
 * 󰱞   Close current layer, return to base layer
 *
 * 󰪸   Typing layer
 * 󰎢   Base layer
 * 󰎥   Numbers
 * 󰎨   Symbols
 * 󰼄   Media
 * 󱊇   System
 *
 * 󱅅   *unused*
 * 󱏦   *unused*
 * 󱥭   *unused*
 */
#define L_BASE     0
#define L_ENTHIUM  L_BASE
#define L_NUMBERS  1
#define L_SYMBOLS  2


/ {
    keymap {
        compatible = "zmk,keymap";

        // A default layer with QWERTY letter layout
        // as a compatibility baseline
        qwerty_layer {
            display-name = "QWERTY";
            bindings = <QWERTY>;
        };

        // Enthium is an alternative layout layer
        // optimised for more comfortable typing and Vim-usage
        enthinum_layer {
            display-name = "Enthium";
            bindings = <ENTHIUM>;
        };

        number_layer {
            display-name = "Numbers";
            bindings = <NUMBERS>;
        };

        symbol_layer {
            display-name = "Symbols";
            bindings = <SYMBOLS>;
        };
    };
};
