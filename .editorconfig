# EditorConfig helps developers define and maintain consistent
# coding styles between different editors and IDEs
# editorconfig.org

root = true

[*]
indent_style = tab
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# CommonMark is implicitly specified to use 4-space tabulation
[*.md]
indent_style = space
indent_size = 4
trim_trailing_whitespace = false

[*.{yml,yaml}]
indent_style = space

# Device tree and keymap files
[*.{dtsi,keymap}]
indent_size = 4
indent_style = space
max_line_length = 160
